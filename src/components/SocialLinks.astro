---
import Link from "./shared/Link.astro";
import presentation from "@/data/presentation";

---

<ul role="list" class="flex flex-row gap-4">
  {
    presentation.socials.map((social, index) => (
      <li>
        <a href={social.link} class="group flex items-center gap-2 text-sm font-medium text-neutral-400 hover:text-white transition-colors" target="_blank">
            <img src={social.icon} class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity" alt={social.label} />
            <span class="hidden md:inline">{social.label}</span>
        </a>
      </li>
        ))
      }
</ul>
