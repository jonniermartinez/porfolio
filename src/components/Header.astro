---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40  flex w-full flex-col gap-2 md:flex-row md:justify-between">

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-3">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100 font-bold"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <!-- <li>
        <a
          href="/work"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100 font-bold"]: pathname === "/work",
          }}>Work</a
        >
      </li> -->
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100 font-bold"]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
      <li>
        <a
          href="/projects"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100 font-bold"]: pathname === "/projects",
          }}>Side projects</a
        >
      </li>
    </ul>
  </nav>
</header>
