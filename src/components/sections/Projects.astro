---
import ExperienceItem from "@/components/ExperienceItem.astro";
import { projects, otherProjects } from "@/data/cv";
---

<article class="flex flex-col gap-8">
  <header class="flex w-full flex-row justify-between gap-2">
    <h2 class="text-xl font-bold text-neutral-100 uppercase tracking-widest border-b border-neutral-800 pb-4">
      Projects
    </h2>
  </header>
  <div class="flex flex-col gap-4">
    {
      projects.map((project) => (
        <ExperienceItem
          title={project.title}
          company={project.role}
          description={project.description}
          link={project.link}
          tags={project.tags}
        />
      ))
    }
  </div>
  
  <div class="flex flex-col gap-4 mt-4">
    <h3 class="text-lg font-semibold text-white">Other Projects</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {otherProjects.map((project) => (
            <a href={project.link} target="_blank" class="p-4 border border-neutral-800 rounded hover:bg-neutral-800/50 transition-colors text-slate-300 hover:text-white flex justify-between items-center group">
                <span>{project.title}</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 7l-10 10" /><path d="M8 7l9 0l0 9" /></svg>
            </a>
        ))}
    </div>
  </div>
</article>

