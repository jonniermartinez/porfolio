---
import { skills } from "@/data/cv";
---

<article class="flex flex-col gap-8">
  <header class="flex w-full flex-row justify-between gap-2">
    <h2 class="text-xl font-bold text-neutral-100 uppercase tracking-widest border-b border-neutral-800 pb-4">
      Technical Skills
    </h2>
  </header>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {Object.entries(skills).map(([category, items]) => (
      <div class="flex flex-col gap-2">
        <h3 class="text-lg font-semibold text-neutral-300 capitalize">{category.replace('_', ' & ').replace('_', ' ')}</h3>
        <div class="flex flex-wrap gap-2">
          {items.map((skill) => (
            <span class="px-2 py-1 bg-neutral-900 border border-neutral-800 text-neutral-400 rounded text-sm">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</article>

