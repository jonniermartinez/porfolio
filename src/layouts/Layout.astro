---
import Header from "../components/Header.astro";
// Supports weights 100-900
import "@fontsource-variable/onest";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
    class="mx-auto flex min-h-screen max-w-[800px] flex-col gap-10 bg-[#111111] px-6 py-12 text-base font-normal text-slate-300 md:gap-16 md:px-0 md:py-16 selection:bg-yellow-400 selection:text-black"
  >
    <!-- Background glow effect -->
    <div class="fixed inset-0 z-[-10] bg-[#111111]" />
    
    <Header />

    <slot />
    
    <style is:global>
      body {
        font-family: "Onest Variable", sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        color: #f1f5f9; /* slate-100 */
      }
    </style>

    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "d0697b8264414954a291cd912280a93a"}'
    ></script><!-- End Cloudflare Web Analytics -->
  </body>
</html>
